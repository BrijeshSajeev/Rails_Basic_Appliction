<%= from_with model: @article do |form| %>
  <div>
    <%= form.label :title%>
    <%= form.text_field :title%>
    <% article.error.full_message_for(:title).each do |message| %>
      <div>
        <%= message%>
      </div>
    <%end%>
  </div>
  <div>
    <%= form.label :body%>
    <%= form.text_field :body%>
    <%article.error.full_message_for(:body).each do |msg|%>
      <div> <%= msg%> </div>
    <%end%>
  </div>
  <div>
    <%= form.submit%>
  </div>
<%end%>